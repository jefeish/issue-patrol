<!doctype html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Policy App</title>

    <!---CDN Links-->
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
    <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css">
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.1/js/bootstrap.min.js"></script>
</head>

<body>
    <script>
        window.addEventListener("load", function () {
            document.getElementById('_policiesA').style.color = 'Aqua';
        })

        $(document).ready(function () {
            $('[data-toggle="popover"]').popover();
        });
    </script>
    <div>
        <div class="container">
            {{{header}}}
            <div id="init" class="jumbotron">
                <p>Policies</p>
            </div>
        </div>

        <div class="container">
            <div class="panel-group" id="accordion">
                {{#each policies}}
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <p class="panel-title">
                            <a data-toggle="collapse" data-parent="#accordion" href="#collapse{{@index}}">
                                <span class="text-primary col-sm-4">{{this.Name}}</span>
                                <span class="text-primary ">{{this.Description}}</span>

                                {{!-- <span class="text-primary">Handler: {{this.Handler}}</span> --}}
                            </a>
                        </p>
                    </div>
                    <div id="collapse{{@index}}" class="panel-collapse collapse">
                        <div class="container"></div>
                        <div class="panel-body">
                            <span class="col-sm-12">
                                <!-- Trigger the modal with a button -->
                                <button type="button" class="btn btn-success pull-right" data-toggle="modal"
                                    data-target="#source{{@index}}">Source</button>

                                <!-- Modal -->
                                <div id="source{{@index}}" class="modal fade" role="dialog">
                                    <div class="modal-dialog">

                                        <!-- Modal content-->
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <button type="button" class="close"
                                                    data-dismiss="modal">&times;</button>
                                                <h4 class="modal-title">Yaml Source</h4>
                                            </div>
                                            <div class="modal-body">
                                                <pre>{{this.Source}}</pre>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </span>
                            <p>
                            <h4><span class="label label-default">Conditions</span></h4>
                            </p>
                            <table class="table table-striped table-hover">
                                <thead>
                                    <tr>
                                        {{#each this.Condition.[0]}}
                                        <th>{{@key}}</th>
                                        {{/each}}
                                    </tr>
                                </thead>
                                <tbody>
                                    {{#each this.Condition}}
                                    <tr>
                                        {{#each this}}
                                        <td>
                                            {{{this}}}
                                        </td>
                                        {{/each}}
                                    </tr>
                                    {{/each}}
                                </tbody>
                            </table>

                            <p>
                            <h4><span class="label label-default">Handler</span></h4> {{this.Handler}}
                            </p>
                            <br>
                            <p>
                            <h4><span class="label label-default">Parameters</span></h4>(input data for the Handler)
                            </p><br>{{{this.Params}}}

                        </div>
                    </div>
                </div>
                {{/each}}
            </div>
        </div>
    </div>

    </div>

</body>

</html>